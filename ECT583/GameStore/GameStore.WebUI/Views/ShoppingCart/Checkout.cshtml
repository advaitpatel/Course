@model GameStore.WebUI.Models.CheckoutViewModel
@{
    ViewBag.Title = "Checkout";
}
<h3>@ViewBag.Title</h3>
<h3 class="box-title">@ViewBag.Message</h3>
<hr />
<div class="box-body">
    @using (Html.BeginForm("PlaceOrder", "ShoppingCart", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(c => c.Address, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.Address, new { @class = "form-control", @placeholder = "Address" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.CreditCard, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.CreditCard, new { @class = "form-control", @placeholder = "Credit Card" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ActionLink("Back to Cart", "Index", "ShoppingCart", new { @class="btn btn-info" })
                <input type="submit" style="padding-left:20px" class="btn btn-success" value="Place Order" />
            </div>
        </div>
    }
</div>