@model GameStore.WebUI.Models.ShoppingCart
@{
    ViewBag.Title = "My Cart";
}

<div class="row">
    <div style="float:left; padding-left:15px">
        <h3>My Cart</h3>
    </div>
    <div style="float:right; padding-right:15px">
        <span>My Order(8)</span><span>@Html.ActionLink("Cart(8)", "Index", "ShoppingCart")</span>
    </div>
</div>
<table class="table table-striped" id="modelList">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GetItems())
    {
        <tr>
            <td>@item.GetItemId()</td>
            <td>@item.GetItemName()</td>
            <td>@item.GetDiscountedPrice()</td>
            <td>
                @using (Html.BeginForm("Post", "ShoppingCart", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    <input type="hidden" name="id" value="@item.GetItemId()">
                    <input type="text" name="quantity" size=3 value="@item.Quantity">
                    <input type="submit" class="formbutton2" value="Update">
                }
            </td>
            <td>@item.GetTotalCost()</td>
            <td>
                @using (Html.BeginForm("Post", "ShoppingCart", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    <input type="hidden" name="id" value="@item.GetItemId()">
                    <input type="hidden" name="quantity" size=3 value="0">
                    <input type="submit" class="formbutton2" value="Delete">
                }
            </td>
        </tr>
    }
        <tr><td colspan="6">@Html.ActionLink("Place Order", "Submit", "ShoppingCart")</tr> 
    </tbody>
</table>