@model Assignment5.Models.CategoryEditViewModel
@{
    ViewBag.Title = @Model.Title;
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}
@if (Model.IsErrorStatusMessage == false)
{
    <div class="panel panel-info">
        <div class="panel-heading">Edit Category</div>
        <div class="panel-body">
        @using (Html.BeginForm("Update", "Category", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.Hidden("CategoryId", @Model.CategoryId)
            <div class="form-group required">
                @Html.LabelFor(o => o.CategoryName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(o => o.CategoryName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>
        }
        </div>
    </div>
}
else
{
    <strong>@Model.StatusMessage</strong>
}
